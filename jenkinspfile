pipeline {
	agent {label 'slavetwo'}
        stages {
           stage ("tomcat build & move to other node") {
              steps {
	              sh 'sudo mvn package'
	              echo "sucessfully copied build to other node"
	            }
	         }
	         stage ('deploy ') {
	         agent {label "slv"}
	   	         steps {
			           sh 'curl -u sujatasiddarth123@gmail.com:Admin@123 -O https://sujata.jfrog.io/artifactory/libs-release-local/com/efsavage/hello-world-war/1.0.0/'
				   sh 'cp hello-world-war-1.0.0.war /opt/tomcat/webapps/'
                                   sh 'sleep 3'
                                   sh 'sudo sh /opt/tomcat/bin/startup.sh'
                                   echo "diployment is sucessfull"
                                   echo "copy the public ip of instace and open it in browser with port:8090"
	             }
	         }
	    }
}
